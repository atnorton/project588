<%= qr_code(@user_token) %>
<script>
(function waitForLogin() {
  setTimeout(function()
    {
      $.get("/sessions/waitForLogin").done(function(data) {
          if(data.result==true)
            window.location = '/'
          else
            waitForLogin()
        }).error(function(data) { waitForLogin() })
    }, 1000)
})()
</script>
