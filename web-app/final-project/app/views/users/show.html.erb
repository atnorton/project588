<% provide(:title, "Users") %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
<%= link_to ((@user.auth_secret.nil?)? "Add " : "View ") + " two factor authentication", user_path + '/twofactor' %> 
</p>

<% if logged_in?(@user) %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
